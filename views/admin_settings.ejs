<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GymRats - Admin Settings</title>
    <link rel="stylesheet" href="/admin/admin.css">
    <link rel="stylesheet" href="/admin/admin_settings.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap">
</head>
<body>
    <div class="container">
        <!-- Sidebar Navigation -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <a href="/home" class="brand-name">GymRats</a>
            </div>
            <ul class="nav-menu">
                <li class="nav-item">
                    <a href="admin_dashboard" class="nav-link ">
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="admin_user" class="nav-link">
                        <span>Users</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="admin_trainers" class="nav-link">
                        <span>Trainers</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="admin_membership" class="nav-link">
                        <span>Memberships</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="admin_exercises" class="nav-link">
                        <span>Exercises</span>
                    </a>
                </li>
                
                <li class="nav-item">
                    <a href="admin_verifier" class="nav-link">
                        <span>Verifiers</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="admin_settings" class="nav-link active">
                        <span>Settings</span>
                    </a>
                </li>
            </ul>
        </aside>
        <!-- Main Content Area -->
        <main class="main-content">
            <!-- Header -->
            <div class="header">
                <h2>Settings</h2>
                <div class="right-container">
                    <div class="user-info">
                        <div class="avatar">A</div>
                        <span>Admin</span>
                    </div>
                </div>
            </div>

            <!-- Settings Sections -->
            <div class="settings-container">
                <!-- General Settings -->
                <div class="settings-section">
                    <h3>General Settings</h3>
                    <div class="settings-card">
                        <div class="settings-item">
                            <label>Site Name</label>
                            <input type="text" value="GymRats Admin" class="settings-input">
                        </div>
                        <div class="settings-item">
                            <label>Time Zone</label>
                            <select class="settings-input">
                                <option>UTC (00:00)</option>
                                <option>EST (-05:00)</option>
                                <option>PST (-08:00)</option>
                            </select>
                        </div>
                        <div class="settings-item">
                            <label>Language</label>
                            <select class="settings-input">
                                <option>English</option>
                                <option>Spanish</option>
                                <option>French</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Email Settings -->
                <div class="settings-section">
                    <h3>Email Settings</h3>
                    <div class="settings-card">
                        <div class="settings-item">
                            <label>SMTP Server</label>
                            <input type="text" placeholder="smtp.example.com" class="settings-input">
                        </div>
                        <div class="settings-item">
                            <label>SMTP Port</label>
                            <input type="number" placeholder="587" class="settings-input">
                        </div>
                        <div class="settings-item">
                            <label>Email From Address</label>
                            <input type="email" placeholder="noreply@gymrats.com" class="settings-input">
                        </div>
                    </div>
                </div>

                <!-- Notification Settings -->
                <div class="settings-section">
                    <h3>Notification Settings</h3>
                    <div class="settings-card">
                        <div class="settings-item toggle">
                            <span>Email Notifications</span>
                            <label class="switch">
                                <input type="checkbox" checked>
                                <span class="slider round"></span>
                            </label>
                        </div>
                        <div class="settings-item toggle">
                            <span>Push Notifications</span>
                            <label class="switch">
                                <input type="checkbox">
                                <span class="slider round"></span>
                            </label>
                        </div>
                        <div class="settings-item toggle">
                            <span>SMS Notifications</span>
                            <label class="switch">
                                <input type="checkbox">
                                <span class="slider round"></span>
                            </label>
                        </div>
                    </div>
                </div>

                <!-- API Settings -->
                <div class="settings-section">
                    <h3>API Configuration</h3>
                    <div class="settings-card">
                        <div class="settings-item">
                            <label>API Key</label>
                            <div class="api-key-container">
                                <input type="password" value="sk_test_123456789" class="settings-input" id="apiKey">
                                <button class="show-hide-btn" onclick="toggleApiKey()">Show</button>
                            </div>
                        </div>
                        <div class="settings-item">
                            <label>Webhook URL</label>
                            <input type="url" placeholder="https://your-webhook-url.com" class="settings-input">
                        </div>
                    </div>
                </div>

                <!-- Save Changes -->
                <div class="settings-actions">
                    <button class="cancel-btn">Cancel</button>
                    <button class="save-btn" onclick="saveSettings()">Save Changes</button>
                </div>
            </div>
        </main>
    </div>

    <script src="/admin/admin_settings.js"></script>
</body>
</html>

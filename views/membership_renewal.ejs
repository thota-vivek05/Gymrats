<!DOCTYPE html>
<html lang="en">

<head>
    <title>Membership Renewal - GymRats</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/userprofile/userprofile.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/js/all.min.js"></script>
    <style>
        /* Renewal Page Specific Styles */
        body {
            background-color: #000; /* Dark background */
            color: #f1f1f1; /* Light text color */
        }
        
        .renewal-container {
            max-width: 800px;
            margin: 80px auto 40px;
            padding: 30px;
            background: #161616; /* Dark card background */
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(138, 43, 226, 0.2); /* Purple shadow for emphasis */
            border: 1px solid #333;
        }

        .renewal-header {
            text-align: center;
            margin-bottom: 40px;
            padding-bottom: 20px;
            border-bottom: 1px solid #333; /* Darker separator */
        }

        .renewal-header h1 {
            color: #f1f1f1; /* White header text */
            margin-bottom: 10px;
            font-size: 2.5em;
        }

        .renewal-header p {
            color: #ccc; /* Light gray text */
            font-size: 1.1em;
        }

        .renewal-options {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); /* Slightly adjusted min width */
            gap: 20px;
            margin-bottom: 30px;
        }

        .option {
            background: #222; /* Slightly lighter dark background */
            border: 2px solid #333;
            border-radius: 10px;
            padding: 25px;
            text-align: center;
            transition: all 0.3s ease;
            cursor: pointer;
            color: #f1f1f1;
            height: 100%; /* Ensure uniform height */
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .option:hover {
            border-color: #8A2BE2; /* Purple hover border */
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(138, 43, 226, 0.3);
        }

        .option.selected {
            border-color: #8A2BE2;
            background: linear-gradient(135deg, #8A2BE2 0%, #7020a0 100%); /* Purple gradient */
            color: white;
            box-shadow: 0 5px 20px rgba(138, 43, 226, 0.6);
        }

        .option.selected .price {
            color: #ffd700; /* Gold price for selected option */
        }

        .option h3 {
            margin-bottom: 15px;
            font-size: 1.3em;
            color: inherit; /* Inherit color for selected state */
        }

        .price {
            font-size: 2em;
            font-weight: bold;
            color: #8A2BE2; /* Purple price for unselected */
            margin-bottom: 10px;
        }

        .save {
            background: #4CAF50; /* Green Save badge */
            color: white;
            padding: 5px 10px;
            border-radius: 15px;
            font-size: 0.9em;
            font-weight: bold;
            margin-bottom: 15px;
            display: inline-block;
        }
        
        .renew-btn {
            background-color: #333;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 500;
            cursor: pointer;
            transition: 0.3s all ease;
            margin-top: 15px;
        }
        
        .option.selected .renew-btn {
             background-color: #ffd700;
             color: #333;
        }
        
        .renew-btn:hover {
            background-color: #8A2BE2;
            color: white;
        }

        .payment-section {
            background: #222; /* Darker background for form section */
            padding: 30px;
            border-radius: 10px;
            margin-top: 30px;
            border: 1px solid #333;
        }

        .payment-section h3 {
            margin-bottom: 20px;
            color: #f1f1f1; /* White header */
            text-align: center;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #ccc; /* Light gray label */
        }

        .form-group input,
        .form-group select {
            width: 100%;
            padding: 12px;
            border: 1px solid #444;
            border-radius: 5px;
            font-size: 16px;
            box-sizing: border-box;
            color: #f1f1f1; /* Light text input */
            background-color: #333; /* Dark input background */
        }
        
        select {
            /* Override inline/JS style */
            background: #333 !important;
            color: #f1f1f1 !important;
            border: 1px solid #444 !important;
        }

        input[type="text"] {
            /* Override inline/JS style */
            background: #333 !important;
            color: #f1f1f1 !important;
            border: 1px solid #444 !important;
        }


        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
        }

        .form-group input:focus {
            border-color: #8A2BE2; /* Purple focus border */
            outline: none;
            box-shadow: 0 0 5px rgba(138, 43, 226, 0.5);
            background: #333;
            color: #f1f1f1;
        }

        .form-group input::placeholder {
            color: #777; /* Darker placeholder */
        }

        .checkbox-group {
            display: flex;
            align-items: center;
            gap: 10px;
            color: #ccc;
        }
        
        .checkbox-group input[type="checkbox"] {
            width: auto;
            border: 1px solid #8A2BE2;
            background-color: #333;
        }
        
        .checkbox-group input[type="checkbox"]:checked {
            background-color: #8A2BE2;
        }

        .actions {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }

        .submit-btn {
            background: #8A2BE2; /* Purple submit button */
            color: white;
            border: 1px solid #8A2BE2;
            padding: 15px 30px;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            flex: 1;
            transition: all 0.3s ease;
        }

        .submit-btn:hover {
            background: #7020a0;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(138, 43, 226, 0.3);
        }

        .submit-btn:disabled {
            background: #444; /* Dark disabled state */
            color: #777;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
            border-color: #444;
        }

        .cancel-btn {
            background: #444; /* Darker gray cancel button */
            color: white;
            border: none;
            padding: 15px 30px;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            flex: 1;
        }

        .cancel-btn:hover {
            background: #555;
        }

        .message {
            padding: 15px;
            border-radius: 5px;
            margin-top: 20px;
            text-align: center;
            font-weight: bold;
            display: none;
        }

        .message.success {
            background: #1e4d2b; /* Darker green success */
            color: #a3e9b1;
            border: 1px solid #285e3c;
        }

        .message.error {
            background: #5e242b; /* Darker red error */
            color: #ff98a5;
            border: 1px solid #7a2b36;
        }

        .current-membership {
            background: #222; /* Dark background */
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 30px;
            border-left: 4px solid #8A2BE2; /* Purple accent bar */
            color: #f1f1f1;
        }

        .current-membership h3 {
            margin-bottom: 10px;
            color: #f1f1f1;
        }

        .current-membership p {
            margin: 5px 0;
            color: #ccc;
        }
        
        .current-membership strong {
            color: #8A2BE2; /* Purple color for plan type */
        }
        
        .current-membership .status-active {
            color: #4CAF50;
        }
        
        .current-membership .status-expired {
            color: #f44336;
        }
    
    </style>
</head>

<body>
    <!-- Navigation (Same as userprofile) -->
    <div class="main-navbar">
        <header>
            <div class="brand-logo">
                <a href="/userdashboard_<%= user && user.membershipType ? user.membershipType.charAt(0).toLowerCase() : 'b' %>"
                    class="brand-name">GymRats</a>
            </div>

            <div class="nav-menu">
                <a
                    href="/userdashboard_<%= user && user.membershipType ? user.membershipType.charAt(0).toLowerCase() : 'b' %>">Home</a>
                <a href="/user_exercises">Exercises</a>
                <a href="/user_nutrition">Nutrition</a>
            </div>

            <div class="right-container">
                <div class="user-profile">
                    <a href="/userprofile" class="active">
                        <% if (user && user.full_name) { %>
                        <span><%= user.full_name %></span>
                        <% } else { %>
                        <span>User</span>
                        <% } %>
                    </a>
                </div>

                <div class="logout-container">
                    <a href="/logout" class="logout-btn">
                        <span>Logout</span>
                    </a>
                </div>
            </div>
        </header>
    </div>

    <!-- Renewal Content -->
    <div class="renewal-container">
        <div class="renewal-header">
            <h1>Extend Your Membership</h1>
            <p>Choose your preferred extension period and complete the payment</p>
        </div>

        <!-- Current Membership Info -->
        <div class="current-membership">
            <h3>Current Membership</h3>
            <p><strong>Plan:</strong> <%= user.membershipType || 'Basic' %></p>
            <p><strong>Months Remaining:</strong>
                <% if (user && user.membershipDuration) { %>
                <%= user.membershipDuration.months_remaining || 0 %>
                <% } else { %>
                0
                <% } %>
            </p>
            <p><strong>Status:</strong> <span class="status-<%= user.status.toLowerCase() %>"><%= user.status %></span>
            </p>
        </div>

        <!-- Renewal Options -->
<div class="renewal-options">
    <div class="option" data-months="1">
        <h3>1 Month</h3>
        <p class="price" id="price-1">
            <% if (user && user.membershipType === 'Platinum') { %>
                ₹999
            <% } else if (user && user.membershipType === 'Gold') { %>
                ₹599
            <% } else { %>
                ₹299
            <% } %>
        </p>
        <button class="renew-btn">Select</button>
    </div>
    <div class="option" data-months="3">
        <h3>3 Months</h3>
        <p class="price" id="price-3">
            <% if (user && user.membershipType === 'Platinum') { %>
                ₹2500
            <% } else if (user && user.membershipType === 'Gold') { %>
                ₹1550
            <% } else { %>
                ₹750
            <% } %>
        </p>
        <p class="save">Save 15%</p>
        <button class="renew-btn">Select</button>
    </div>
    <div class="option" data-months="6">
        <h3>6 Months</h3>
        <p class="price" id="price-6">
            <% if (user && user.membershipType === 'Platinum') { %>
                ₹4500
            <% } else if (user && user.membershipType === 'Gold') { %>
                ₹2700
            <% } else { %>
                ₹1350
            <% } %>
        </p>
        <p class="save">Save 25%</p>
        <button class="renew-btn">Select</button>
    </div>
</div>

        <!-- Payment Form -->
        <div class="payment-section">
            <h3>Payment Information</h3>
            <form id="paymentForm">
                <div class="form-group">
                    <label for="cardType">Card Type:</label>
                    <select id="cardType" name="cardType" required>
                        <option value="">Select Card Type</option>
                        <option value="visa">Visa</option>
                        <option value="mastercard">MasterCard</option>
                        <option value="amex">American Express</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="cardNumber">Card Number:</label>
                    <input type="text" id="cardNumber" name="cardNumber" placeholder="1234 5678 9012 3456"
                        pattern="[0-9\s]{13,19}" maxlength="19" required>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="expiryDate">Expiry Date:</label>
                        <input type="text" id="expiryDate" name="expiryDate" placeholder="MM/YY"
                            pattern="(0[1-9]|1[0-2])\/?([0-9]{2})" required>
                    </div>

                    <div class="form-group">
                        <label for="cvv">CVV:</label>
                        <input type="text" id="cvv" name="cvv" placeholder="123" pattern="[0-9]{3,4}" maxlength="4"
                            required>
                    </div>
                </div>



                

                <input type="hidden" id="selectedMonths" name="selectedMonths">

                <div class="actions">
                    <button type="submit" class="submit-btn" id="submitBtn" disabled>
                        Extend Membership
                    </button>
                    <button type="button" class="cancel-btn" onclick="goBack()">
                        Cancel
                    </button>
                </div>
            </form>

            <div class="message" id="message"></div>
        </div>
    </div>

    <script>
        let selectedMonths = 0;

        // Option selection
        document.querySelectorAll('.option').forEach(option => {
            option.addEventListener('click', function () {
                // Remove selected class from all options
                document.querySelectorAll('.option').forEach(opt => {
                    opt.classList.remove('selected');
                });

                // Add selected class to clicked option
                this.classList.add('selected');

                // Get selected months
                selectedMonths = parseInt(this.dataset.months);
                document.getElementById('selectedMonths').value = selectedMonths;

                // Enable submit button
                document.getElementById('submitBtn').disabled = false;
            });
        });

        // Form submission - UPDATED VERSION
        document.getElementById('paymentForm').addEventListener('submit', function (e) {
            e.preventDefault();

            if (selectedMonths === 0) {
                showMessage('Please select an extension period', 'error');
                return;
            }

            const formData = {
                additionalMonths: selectedMonths,
                cardType: document.getElementById('cardType').value,
                cardNumber: document.getElementById('cardNumber').value,
                expiryDate: document.getElementById('expiryDate').value,
                cvv: document.getElementById('cvv').value,
                
            };

            // Validate card number
            const cardNumber = formData.cardNumber.replace(/\s/g, '');
            if (!/^\d{13,19}$/.test(cardNumber)) {
                showMessage('Please enter a valid card number', 'error');
                return;
            }

            // Validate expiry date
            if (!/^(0[1-9]|1[0-2])\/([0-9]{2})$/.test(formData.expiryDate)) {
                showMessage('Please enter a valid expiry date (MM/YY)', 'error');
                return;
            }

            // Validate CVV
            if (!/^\d{3,4}$/.test(formData.cvv)) {
                showMessage('Please enter a valid CVV', 'error');
                return;
            }

            // Show loading state
            const submitBtn = document.getElementById('submitBtn');
            const originalText = submitBtn.textContent;
            submitBtn.textContent = 'Processing...';
            submitBtn.disabled = true;

            // Send extension request - UPDATED FETCH HANDLING
            fetch('/membership/extend', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                })
                .then(response => {
                    // Check if response is JSON or redirect
                    const contentType = response.headers.get('content-type');

                    if (contentType && contentType.includes('application/json')) {
                        return response.json().then(data => {
                            if (response.ok) {
                                showMessage(data.message || 'Membership extended successfully!',
                                    'success');
                                setTimeout(() => {
                                    window.location.href = '/userprofile';
                                }, 1500);
                            } else {
                                throw new Error(data.error || 'Failed to extend membership');
                            }
                        });
                    } else {
                        // It's a redirect, follow it
                        window.location.href = response.url || '/userprofile';
                        return Promise.resolve(); // Return resolved promise to avoid errors
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showMessage(error.message || 'An error occurred. Please try again.', 'error');
                    submitBtn.disabled = false;
                    submitBtn.textContent = originalText;
                });
        });

        function showMessage(message, type) {
            const messageEl = document.getElementById('message');
            messageEl.textContent = message;
            messageEl.className = `message ${type}`;
            messageEl.style.display = 'block';
        }

        function goBack() {
            window.location.href = '/userprofile';
        }

        // Format card number input
        document.getElementById('cardNumber').addEventListener('input', function (e) {
            let value = e.target.value.replace(/\s/g, '');
            if (value.length > 0) {
                value = value.match(new RegExp('.{1,4}', 'g')).join(' ');
            }
            e.target.value = value;
        });

        // Format expiry date input
        document.getElementById('expiryDate').addEventListener('input', function (e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length >= 2) {
                value = value.substring(0, 2) + '/' + value.substring(2, 4);
            }
            e.target.value = value;
        });
    </script>
</body>

</html>
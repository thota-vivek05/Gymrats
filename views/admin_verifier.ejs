<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GymRats - Content Verifiers Management</title>
    <link rel="stylesheet" href="/admin/admin.css">
    <link rel="stylesheet" href="/admin/admin_verifier.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap">

</head>

<body>
    <div class="container">
        <!-- Sidebar Navigation -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <a href="/home" class="brand-name">GymRats</a>
            </div>
            <ul class="nav-menu">
                <li class="nav-item">
                    <a href="/admin_dashboard" class="nav-link ">
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin_user" class="nav-link">
                        <span>Users</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin_trainers" class="nav-link">
                        <span>Trainers</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin_membership" class="nav-link">
                        <span>Memberships</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin_exercises" class="nav-link">
                        <span>Exercises</span>
                    </a>
                </li>
               
                <li class="nav-item">
                    <a href="/admin_verifier" class="nav-link active">
                        <span>Verifiers</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin_settings" class="nav-link">
                        <span>Settings</span>
                    </a>
                </li>
            </ul>
        </aside>
        <!-- Main Content Area -->
        <main class="main-content">
            <!-- Header -->
            <div class="header">
                <h2>Content Verifiers Management</h2>
                <div class="right-container">
                    <div class="user-info">
                        <div class="avatar">A</div>
                        <span>Admin</span>
                    </div>
                </div>
            </div>

            <!-- Stats Cards -->
            <div class="stats-container">
                <div class="stats-card">
                    <div class="stats-content">
                        <div class="stats-info">
                            <div class="stats-header">
                                <h3>Total Verifiers</h3>
                            </div>
                            <div class="stats-number"><%= totalVerifiers || 0 %></div>
                            <div class="stats-label">All platform verifiers</div>
                        </div>
                    </div>
                </div>
                <div class="stats-card">
                    <div class="stats-content">
                        <div class="stats-info">
                            <div class="stats-header">
                                <h3>Approved Trainers</h3>
                            </div>
                            <div class="stats-number"><%= approvedTrainers || 0 %></div>
                            <div class="stats-label">Successfully approved</div>
                        </div>
                    </div>
                </div>
                <div class="stats-card">
                    <div class="stats-content">
                        <div class="stats-info">
                            <div class="stats-header">
                                <h3>Pending Trainers</h3>
                            </div>
                            <div class="stats-number"><%= pendingTrainers || 0 %></div>
                            <div class="stats-label">Awaiting approval</div>
                        </div>
                    </div>
                </div>
                <div class="stats-card">
                    <div class="stats-content">
                        <div class="stats-info">
                            <div class="stats-header">
                                <h3>Rejected Trainers</h3>
                            </div>
                            <div class="stats-number"><%= rejectedTrainers || 0 %></div>
                            <div class="stats-label">Not approved</div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Search Bar -->
            <div class="search-container">
                <div class="search-bar">
                    <input type="text" id="verifierSearchInput"
                        placeholder="Search verifiers by name, expertise or status...">
                </div>
            </div>

            <!-- Tab Navigation -->
            <div class="tab-container">
                <button class="tab active" data-tab="all">All Verifiers</button>
            </div>

            <!-- Verifier Table -->

            <div class="section">
                <div class="table-header">
                    <h3 class="section-title">Verifier List</h3>
                    <button class="add-btn" id="addVerifierBtn">+ Add New Verifier</button>
                </div>
                <div class="table-responsive">
                    <table>
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody id="verifierTableBody"> <!-- Add this ID -->
                            <% if (verifiers && verifiers.length > 0) { %>
                            <% verifiers.forEach(verifier => { %>
                            <tr>
                                <td>
                                    <div class="user-info verifier-info"> <!-- Add verifier-info class -->
                                        <div class="avatar"><%= verifier.name.charAt(0) %></div>
                                        <span><%= verifier.name %></span>
                                    </div>
                                </td>
                                <td><span class="status active">Active</span></td>
                            </tr>
                            <% }); %>
                            <% } else { %>
                            <tr>
                                <td colspan="2" class="no-data">No verifiers found</td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Content Distribution Chart -->
            <div class="section">
                <div class="section-header">
                    <h3 class="section-title">Content Verification Distribution</h3>
                </div>
                <div class="charts-container">
                    <div class="chart-card">
                        <div class="chart-container">
                            <canvas id="contentTypeChart"></canvas>
                        </div>
                    </div>
                    <div class="chart-card">
                        <div class="chart-container">
                            <canvas id="verifierPerformanceChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Setup interactive elements
            setupResponsiveFeatures();
            setupTabNavigation();
            setupSearchFunctionality();
            initializeCharts();
        });

        function setupResponsiveFeatures() {
            // Navigation buttons
            const navItems = document.querySelectorAll('.nav-link');

            navItems.forEach(item => {
                item.addEventListener('click', function (e) {
                    const href = this.getAttribute('href');
                    // Prevent default only for the current page to avoid redundant navigation
                    if (href === '/admin_verifier') {
                        e.preventDefault();
                        navItems.forEach(link => link.classList.remove('active'));
                        this.classList.add('active');
                    }
                    // Allow navigation for all other hrefs
                });
            });

            // Action buttons
            const actionButtons = document.querySelectorAll('.action-btn');
            actionButtons.forEach(button => {
                button.addEventListener('click', function () {
                    this.classList.add('clicked');
                    setTimeout(() => {
                        this.classList.remove('clicked');
                    }, 200);

                    // Handle approve/reject actions
                    if (this.classList.contains('approve')) {
                        const row = this.closest('tr');
                        const statusCell = row.querySelector('.status');
                        if (statusCell) {
                            statusCell.classList.remove('pending');
                            statusCell.classList.add('active');
                            statusCell.textContent = 'Active';
                        }

                        // Replace action buttons
                        const actionCell = this.closest('td');
                        actionCell.innerHTML = `
                    <button class="action-btn">View</button>
                    <button class="action-btn">Edit</button>
                `;

                        // Reattach event listeners
                        const newButtons = actionCell.querySelectorAll('.action-btn');
                        newButtons.forEach(btn => {
                            btn.addEventListener('click', function () {
                                this.classList.add('clicked');
                                setTimeout(() => {
                                    this.classList.remove('clicked');
                                }, 200);
                            });
                        });
                    } else if (this.classList.contains('reject')) {
                        const row = this.closest('tr');
                        if (confirm('Are you sure you want to reject this verifier?')) {
                            row.remove();
                        }
                    }
                });
            });

            // Pagination buttons
            const pageButtons = document.querySelectorAll('.page-btn');
            pageButtons.forEach(button => {
                button.addEventListener('click', function () {
                    pageButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                });
            });

            // Add New Verifier button
                    
                const addVerifierBtn = document.querySelector('.add-btn');
                const modal = document.getElementById('addVerifierModal');
                const closeModal = document.querySelector('.close-modal');

                if (addVerifierBtn) {
                    addVerifierBtn.addEventListener('click', function () {
                        modal.style.display = 'block';
                    });
                }

                if (closeModal) {
                    closeModal.addEventListener('click', function () {
                        modal.style.display = 'none';
                    });
                }

                // Close modal when clicking outside
                window.addEventListener('click', function (event) {
                    if (event.target === modal) {
                        modal.style.display = 'none';
                    }
                });
                        }

        function setupTabNavigation() {
    const tabs = document.querySelectorAll('.tab');
    const verifierRows = document.querySelectorAll('#verifierTableBody tr');

    tabs.forEach(tab => {
        tab.addEventListener('click', function () {
            // Update active tab
            tabs.forEach(t => t.classList.remove('active'));
            this.classList.add('active');

            const tabType = this.getAttribute('data-tab');

            // Filter verifiers based on tab
            verifierRows.forEach(row => {
                const statusCell = row.querySelector('.status');

                switch (tabType) {
                    case 'all':
                        row.style.display = '';
                        break;
                    case 'active':
                        if (statusCell && statusCell.classList.contains('active')) {
                            row.style.display = '';
                        } else {
                            row.style.display = 'none';
                        }
                        break;
                    case 'pending':
                        if (statusCell && statusCell.classList.contains('pending')) {
                            row.style.display = '';
                        } else {
                            row.style.display = 'none';
                        }
                        break;
                    default:
                        row.style.display = '';
                        break;
                }
            });
        });
    });
}
        function setupSearchFunctionality() {
    const searchInput = document.getElementById('verifierSearchInput');
    const verifierRows = document.querySelectorAll('#verifierTableBody tr');

    if (searchInput) {
        searchInput.addEventListener('keyup', function () {
            const searchTerm = this.value.toLowerCase();

            verifierRows.forEach(row => {
                // Get the verifier name from the user-info div
                const verifierNameElement = row.querySelector('.user-info span');
                const statusElement = row.querySelector('.status');
                
                if (verifierNameElement && statusElement) {
                    const verifierName = verifierNameElement.textContent.toLowerCase();
                    const status = statusElement.textContent.toLowerCase();

                    if (verifierName.includes(searchTerm) || status.includes(searchTerm)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                }
            });
        });
    }
}

        function initializeCharts() {
            // Content Type Distribution Chart
            const contentTypeCtx = document.getElementById('contentTypeChart');
            if (contentTypeCtx) {
                new Chart(contentTypeCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Exercise Form', 'Nutrition Plans', 'Workout Programs', 'Equipment Use',
                            'Safety Guides'
                        ],
                        datasets: [{
                            data: [35, 25, 20, 12, 8],
                            backgroundColor: [
                                '#8A2BE2',
                                '#9370DB',
                                '#BA55D3',
                                '#DA70D6',
                                '#EE82EE'
                            ],
                            borderWidth: 1,
                            borderColor: '#1e1e1e'
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'bottom',
                                labels: {
                                    color: '#f1f1f1',
                                    padding: 20,
                                    font: {
                                        size: 12
                                    }
                                }
                            },
                            title: {
                                display: true,
                                text: 'Content Types Verified',
                                color: '#f1f1f1',
                                font: {
                                    size: 16
                                }
                            }
                        }
                    }
                });
            }

            // Verifier Performance Chart
            const performanceCtx = document.getElementById('verifierPerformanceChart');
            if (performanceCtx) {
                new Chart(performanceCtx, {
                    type: 'bar',
                    data: {
                        labels: ['High Performers (90%+)', 'Med Performers (70-89%)',
                            'New Verifiers (<10 reviews)'
                        ],
                        datasets: [{
                            label: 'Verifier Count',
                            data: [32, 15, 5],
                            backgroundColor: [
                                '#4CAF50',
                                '#FFC107',
                                '#8A2BE2'
                            ],
                            borderWidth: 1,
                            borderColor: '#1e1e1e'
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    color: '#f1f1f1'
                                },
                                grid: {
                                    color: 'rgba(255, 255, 255, 0.1)'
                                }
                            },
                            x: {
                                ticks: {
                                    color: '#f1f1f1'
                                },
                                grid: {
                                    display: false
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                display: false
                            },
                            title: {
                                display: true,
                                text: 'Verifier Performance Distribution',
                                color: '#f1f1f1',
                                font: {
                                    size: 16
                                }
                            }
                        }
                    }
                });
            }
        }
    </script>
    <!-- Add Verifier Modal -->
<div id="addVerifierModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Add New Verifier</h3>
            <span class="close-modal">&times;</span>
        </div>
        <div class="modal-body">
            <iframe src="/admin/verifier_form" id="verifierFormFrame" style="width: 100%; height: 500px; border: none;"></iframe>
        </div>
    </div>
</div>
</body>

</html>
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                // Mobile menu toggle
                document.getElementById('menuIcon').addEventListener('click', function() {
                    document.getElementById('sideNavbar').classList.add('open');
                });
                
                document.getElementById('closeBtn').addEventListener('click', function() {
                    document.getElementById('sideNavbar').classList.remove('open');
                });
                
                
                
                // Units toggle
                const unitOptions = document.querySelectorAll('.unit-option');
                const unitSystems = document.querySelectorAll('.unit-system');
                
                unitOptions.forEach(option => {
                    option.addEventListener('click', () => {
                        unitOptions.forEach(opt => opt.classList.remove('active'));
                        option.classList.add('active');
                        
                        const unit = option.getAttribute('data-unit');
                        unitSystems.forEach(system => {
                            system.style.display = 'none';
                        });
                        
                        document.querySelector('.unit-system.' + unit).style.display = 'block';
                    });
                });
                
                // BMI Calculator functionality
                const calculateBmiBtn = document.getElementById('calculate-bmi');
                const resetBmiBtn = document.getElementById('reset-bmi');
                const bmiResults = document.getElementById('bmi-results');
                const bmiValue = document.getElementById('bmi-value');
                const bmiCategory = document.getElementById('bmi-category');
                const bmiMarker = document.getElementById('bmi-marker');
                
                calculateBmiBtn.addEventListener('click', function() {
                    // Get active unit system
                    const isMetric = document.querySelector('.unit-option[data-unit="metric"]').classList.contains('active');
                    
                    let weight, height;
                    
                    if (isMetric) {
                        weight = parseFloat(document.getElementById('weight-kg').value);
                        height = parseFloat(document.getElementById('height-cm').value) / 100; // convert cm to m
                    } else {
                        weight = parseFloat(document.getElementById('weight-lb').value) * 0.453592; // convert lb to kg
                        const feet = parseFloat(document.getElementById('height-ft').value);
                        const inches = parseFloat(document.getElementById('height-in').value);
                        height = ((feet * 12) + inches) * 0.0254; // convert to meters
                    }
                    
                    const age = parseInt(document.getElementById('age').value);
                    const gender = document.querySelector('input[name="gender"]:checked').value;
                    
                    // Validate inputs
                    if (isNaN(weight) || isNaN(height) || height <= 0 || weight <= 0 || isNaN(age)) {
                        alert('Please enter valid values for all fields.');
                        return;
                    }
                    
                    // Calculate BMI
                    const bmi = weight / (height * height);
                    
                    // Display result
                    bmiValue.textContent = bmi.toFixed(1);
                    
                    // Determine BMI category
                    let category;
                    let categoryClass;
                    let markerPosition;
                    
                    if (bmi < 18.5) {
                        category = 'Underweight';
                        categoryClass = 'bmi-category-underweight';
                        markerPosition = (bmi / 40) * 100;
                    } else if (bmi < 25) {
                        category = 'Normal Weight';
                        categoryClass = 'bmi-category-normal';
                        markerPosition = (bmi / 40) * 100;
                    } else if (bmi < 30) {
                        category = 'Overweight';
                        categoryClass = 'bmi-category-overweight';
                        markerPosition = (bmi / 40) * 100;
                    } else {
                        category = 'Obese';
                        categoryClass = 'bmi-category-obese';
                        markerPosition = Math.min((bmi / 40) * 100, 95); // cap at 95% for very high BMIs
                    }
                    
                    bmiCategory.textContent = category;
                    bmiCategory.className = 'result-value ' + categoryClass;
                    bmiMarker.style.left = markerPosition + '%';
                    
                    // Show results
                    bmiResults.style.display = 'block';
                    
                    // Scroll to results
                    bmiResults.scrollIntoView({ behavior: 'smooth', block: 'start' });
                });
                
                resetBmiBtn.addEventListener('click', function() {
                    document.getElementById('bmi-form').reset();
                    bmiResults.style.display = 'none';
                });
                
                // Share and Save functionality (placeholder)
